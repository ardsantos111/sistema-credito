{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python@3.1.0",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "build": {
          "env": {
            "PIP_TARGET": ".",
            "PYTHON_VERSION": "3.9"
          },
          "command": "pip install --no-cache-dir -r requirements.txt"
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9"
  }
}
{
  "version": 2,
  "buildCommand": "pip install --no-cache-dir -r requirements.txt",
  "devCommand": "python app.py",
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python@3.1.0",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9",
    "PIP_TARGET": "."
  }
}